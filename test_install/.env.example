# OpenCode Multi-Agent System Environment Variables
# Copy this file to .env and update with your specific values

# Database Configuration
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=opencode
POSTGRES_USER=opencode
POSTGRES_PASSWORD=your_secure_password_here

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Authentication
JWT_SECRET=your_jwt_secret_here_generate_random_32_bytes
ADMIN_PASSWORD=your_admin_password_here

# Docker Registry
DOCKER_REGISTRY=your-registry.com
DOCKER_TAG=latest

# Kubernetes
K8S_NAMESPACE=opencode-system
K8S_CONTEXT=your-k8s-context

# Monitoring
GRAFANA_PASSWORD=your_grafana_password
PROMETHEUS_URL=http://prometheus:9090
GRAFANA_URL=http://grafana:3000

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# External Services
VECTOR_DB_PATH=/data/vector.db
CACHE_TTL=3600

# SSL/TLS
SSL_CERT_PATH=/certs/master.crt
SSL_KEY_PATH=/certs/master.key
CA_CERT_PATH=/certs/ca.crt

# API Configuration
API_HOST=0.0.0.0
API_PORT=8080
CORS_ORIGINS=["*"]
RATE_LIMIT=100

# Metrics
METRICS_PORT=9090
ENABLE_METRICS=true

# Agent Configuration
MAX_SLAVE_AGENTS=20
AGENT_TIMEOUT=300
HEALTH_CHECK_INTERVAL=30

# Load Balancing
LOAD_BALANCING_STRATEGY=round_robin
AUTO_SCALING=true

# Security
ENABLE_AUTH=true
ENABLE_SSL=true
VERIFY_SSL=true

# Backup
BACKUP_INTERVAL=3600
BACKUP_RETENTION=7

# Monitoring Thresholds
ALERT_THRESHOLD_CPU=80
ALERT_THRESHOLD_MEMORY=85
ALERT_THRESHOLD_DISK=90